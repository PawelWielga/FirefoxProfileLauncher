<Page x:Class="FirefoxProfileLauncher.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FirefoxProfileLauncher"
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="200"
      Title="Home">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid x:Name="Header" Grid.Row="0"></Grid>
        <Grid x:Name="Content" Grid.Row="1">
            <StackPanel x:Name="ProfilesContainer" Orientation="Horizontal" HorizontalAlignment="Center" >
                <Image x:Name="User1" MouseDown="Button_Click1" Source="/FirefoxProfileLauncher;component/Assets/user.png" Height="100" Margin="10"/>
                <Image x:Name="User2" MouseDown="Button_Click2" Source="/FirefoxProfileLauncher;component/Assets/user.png" Height="100" Margin="10"/>
            </StackPanel>
        </Grid>
        <Grid x:Name="Footer" Grid.Row="2"></Grid>
    </Grid>
</Page>
