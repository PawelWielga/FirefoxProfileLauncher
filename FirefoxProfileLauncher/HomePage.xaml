<Page x:Class="FirefoxProfileLauncher.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FirefoxProfileLauncher"
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="200"
      Title="Home">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid x:Name="Header" Grid.Row="0"></Grid>
        <Image Grid.Row="1" Source="Assets/2699_color.png" Height="40" Width="40" HorizontalAlignment="Left" VerticalAlignment="Top" MouseDown="Image_MouseDownAsync" Cursor="Hand"/>
        <StackPanel Grid.Row="1" x:Name="ProfilesContainer" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Grid x:Name="Footer" Grid.Row="2"></Grid>
    </Grid>
</Page>
